---
import "../styles/global.css";
import PostHog from "../components/posthog.astro";

interface Props {
  frontmatter: {
    title: string;
    description?: string;
    product: string;
    logo: string;
    lastUpdated: string;
    heading?: string;
  };
}

const { frontmatter } = Astro.props;
const { title, description, product, logo, lastUpdated, heading = "Privacy Policy" } = frontmatter;

const siteUrl = "https://semos.sh";
const pageUrl = `${siteUrl}${Astro.url.pathname}`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="canonical" href={pageUrl} />

    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={pageUrl} />
    <meta property="og:site_name" content="Semos Labs" />

    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Space+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Space+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap"
      media="print"
      onload="this.media='all'"
    />
    <noscript>
      <link
        rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Space+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap"
      />
    </noscript>
    <title>{title}</title>
    <PostHog />
  </head>
  <body class="min-h-screen flex flex-col">
    <!-- Nav -->
    <nav class="fixed top-0 inset-x-0 z-[100] px-4 md:px-8 py-3 md:py-4 bg-black/85 backdrop-blur-md border-b border-gray-800">
      <div class="max-w-content mx-auto flex items-center justify-between">
        <a href="/" class="flex items-center gap-2.5 min-w-0">
          <img src="/logos/Sema.png" alt="Semos Labs" class="w-7 h-7 md:w-8 md:h-8 rounded-md shrink-0" />
          <span class="flex flex-col gap-0 min-w-0">
            <span class="font-hand text-xl md:text-2xl tracking-[0.01em]">semos</span>
            <span class="hidden md:block font-hand text-fine tracking-[0.01em] text-gray-400">A constellation of terminal-native tools.</span>
          </span>
        </a>
        <div class="flex items-center gap-4 md:gap-8 text-label md:text-body-sm text-gray-300 shrink-0">
          <a href="/#products" class="hidden sm:inline hover:text-white transition-colors">Products</a>
          <a href="/blog" class="hover:text-white transition-colors">Blog</a>
          <a href="/about" class="hover:text-white transition-colors">About</a>
          <a href="/docs/" class="hover:text-white transition-colors">Docs</a>
          <a href="https://github.com/semos-labs" target="_blank" rel="noopener" class="hover:text-white transition-colors">GitHub â†—</a>
        </div>
      </div>
    </nav>

    <!-- Content -->
    <main class="flex-1">
      <section class="pt-28 md:pt-36 pb-16 md:pb-24 px-6 md:px-8">
        <div class="max-w-[720px] mx-auto">
          <div class="flex items-center gap-3 md:gap-4 mb-8 md:mb-12">
            <img src={logo} alt={product} class="w-10 h-10 md:w-12 md:h-12 rounded-xl" />
            <span class="font-hand text-title-xl">{product}</span>
          </div>

          <h1 class="heading-page mb-6">{heading}</h1>
          <p class="text-small text-gray-500 mb-12">Last updated: {lastUpdated}</p>

          <div class="privacy-content">
            <slot />
          </div>
        </div>
      </section>
    </main>

    <!-- Footer -->
    <footer class="py-12 px-8 border-t border-gray-800">
      <div class="max-w-content mx-auto flex flex-col md:flex-row items-center justify-between gap-4 md:gap-0 text-center md:text-left">
        <div class="flex items-center gap-3">
          <img src="/logos/Sema.png" alt="Semos" class="w-6 h-6 rounded" />
          <span class="font-hand text-title-md">Semos Labs</span>
        </div>
        <p class="text-caption text-gray-500">
          Built with obsessive care for the terminal.
        </p>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  .privacy-content h2 {
    font-family: "Space Mono", monospace;
    font-size: 1.25rem;
    line-height: 1.4;
    color: white;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .privacy-content h2:first-child {
    margin-top: 0;
  }

  .privacy-content p {
    color: #d1d5db;
    line-height: 1.75;
    margin-bottom: 1rem;
  }

  .privacy-content ul {
    list-style: disc;
    padding-left: 1.5rem;
    color: #9ca3af;
    margin-bottom: 1rem;
  }

  .privacy-content ul li {
    margin-bottom: 0.5rem;
    line-height: 1.75;
  }

  .privacy-content strong {
    color: #e5e7eb;
  }

  .privacy-content code {
    font-size: 0.85em;
    background: #1f2937;
    padding: 0.15em 0.4em;
    border-radius: 0.25rem;
  }

  .privacy-content a {
    color: #e5e7eb;
    text-decoration: underline;
    text-underline-offset: 4px;
    text-decoration-color: #4b5563;
    transition: color 0.15s, text-decoration-color 0.15s;
  }

  .privacy-content a:hover {
    color: white;
    text-decoration-color: #9ca3af;
  }
</style>
