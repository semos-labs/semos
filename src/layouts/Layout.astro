---
import "../styles/global.css";
import PostHog from '../components/posthog.astro'

interface Props {
  title: string;
  description?: string;
}

const { title, description = "A family of terminal apps and tools" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://semos.sh/cover.png" />
    <meta property="og:url" content="https://semos.sh" />
    <meta property="og:site_name" content="Semos Labs" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://semos.sh/cover.png" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,300;0,400;0,500;0,600;1,400&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
    <PostHog/>
  </head>
  <body>
    <!-- Nav -->
    <nav class="fixed top-0 inset-x-0 z-[100] px-4 md:px-8 py-3 md:py-4 bg-black/85 backdrop-blur-md border-b border-gray-800">
      <div class="max-w-content mx-auto flex items-center justify-between">
        <a href="/" class="flex items-center gap-2.5 min-w-0">
          <img src="/logos/Sema.png" alt="Semos Labs" class="w-7 h-7 md:w-8 md:h-8 rounded-md shrink-0" />
          <span class="flex flex-col gap-0 min-w-0">
            <span class="font-hand text-xl md:text-2xl tracking-[0.01em]">semos</span>
            <span class="hidden md:block font-hand text-[0.5rem] tracking-[0.01em] text-gray-400">A constellation of terminal-native tools.</span>
          </span>
        </a>
        <div class="flex items-center gap-4 md:gap-8 text-[0.78rem] md:text-[0.85rem] text-gray-300 shrink-0">
          <a href="/#products" class="hidden sm:inline hover:text-white transition-colors" data-ph-cta="nav_products">Products</a>
          <a href="/docs/" class="hover:text-white transition-colors" data-ph-cta="nav_docs">Docs</a>
          <a href="https://github.com/semos-labs" target="_blank" rel="noopener" class="hover:text-white transition-colors" data-ph-cta="nav_github">
            GitHub â†—
          </a>
        </div>
      </div>
    </nav>

    <!-- Page content -->
    <main>
      <slot />
    </main>

    <!-- Footer -->
    <footer class="py-12 px-8 border-t border-gray-800">
      <div class="max-w-content mx-auto flex flex-col md:flex-row items-center justify-between gap-4 md:gap-0 text-center md:text-left">
        <div class="flex items-center gap-3">
          <img src="/logos/Sema.png" alt="Semos" class="w-6 h-6 rounded" />
          <span class="font-hand text-[1.3rem]">Semos Labs</span>
        </div>
        <p class="text-[0.78rem] text-gray-500">
          Built with obsessive care for the terminal.
        </p>
      </div>
    </footer>
    <script is:inline>
      document.querySelectorAll('[data-ph-cta]').forEach(function(el) {
        el.addEventListener('click', function() {
          if (window.posthog) {
            window.posthog.capture('cta_click', {
              cta: el.getAttribute('data-ph-cta'),
              url: el.getAttribute('href'),
              page: window.location.pathname,
            });
          }
        });
      });
    </script>
  </body>
</html>
