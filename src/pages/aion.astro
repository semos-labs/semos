import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
---

<Layout title="Aion â€” Terminal Calendar with Vim-Style Keybindings" description="A full-featured Google Calendar TUI client. Beautiful, fast, keyboard-driven.">
  <!-- Nav -->
  <nav class="nav">
    <div class="nav-inner">
      <a href="/" class="nav-logo">
        <img src="/logos/Sema.png" alt="Semos Labs" class="nav-logo-img" />
        <span class="nav-logo-text">semos</span>
      </a>
      <div class="nav-links">
        <a href="/#products">Products</a>
        <a href="/docs/">Docs</a>
        <a href="https://github.com/semos-labs/aion" target="_blank" rel="noopener">GitHub â†—</a>
      </div>
    </div>
  </nav>

  <!-- Hero -->
  <section class="hero">
    <div class="hero-content">
      <div class="hero-badge">
        <img src="/logos/Aion.png" alt="Aion" class="hero-logo" />
        <span class="hero-product-name">Aion</span>
      </div>
      <h1 class="hero-title">
        Google Calendar<br />
        <span class="hero-accent">in your terminal</span>
      </h1>
      <p class="hero-description">
        A full-featured calendar client with vim-style keybindings. View, create, and manage
        events without leaving the command line. Beautiful, fast, keyboard-driven.
      </p>
      <div class="hero-cta">
        <a href="/docs/aion/" class="btn-primary">Documentation</a>
        <a href="https://github.com/semos-labs/aion" target="_blank" rel="noopener" class="btn-secondary">GitHub â†—</a>
      </div>
    </div>
    <div class="hero-decoration">
      <div class="terminal-block">
        <div class="terminal-bar">
          <span class="terminal-dot"></span>
          <span class="terminal-dot"></span>
          <span class="terminal-dot"></span>
        </div>
        <div class="terminal-body">
          <p><span class="t-prompt">$</span> <span class="t-cmd">brew install aion</span></p>
          <p class="t-output">âœ“ Installed aion</p>
          <p>&nbsp;</p>
          <p><span class="t-prompt">$</span> <span class="t-cmd">aion</span></p>
          <p>&nbsp;</p>
          <p class="t-ui">â”Œâ”€ Feb 13, Thu â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”</p>
          <p class="t-ui">â”‚ <span class="t-event">09:00</span>  Team standup        â”‚</p>
          <p class="t-ui">â”‚ <span class="t-event">11:00</span>  Design review        â”‚</p>
          <p class="t-ui">â”‚ <span class="t-highlight">â–¸14:00  Ship Aion v2 ğŸš€</span>     â”‚</p>
          <p class="t-ui">â”‚ <span class="t-event">16:30</span>  Coffee with Alex     â”‚</p>
          <p class="t-ui">â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Install -->
  <section class="quickstart">
    <div class="container">
      <h2 class="section-title">Install</h2>
      <div class="install-grid">
        <div class="install-card">
          <h3>Homebrew</h3>
          <div class="code-block">
            <code>$ brew tap nick-skriabin/tap</code>
            <code>$ brew install aion</code>
          </div>
        </div>
        <div class="install-card">
          <h3>Binary download</h3>
          <div class="code-block">
            <code>$ curl -L https://github.com/semos-labs/aion/releases/latest</code>
            <code>$ chmod +x aion && sudo mv aion /usr/local/bin/</code>
          </div>
        </div>
      </div>
      <p class="install-platforms">
        macOS (Apple Silicon &amp; Intel) Â· Linux (x64 &amp; ARM64)
      </p>
    </div>
  </section>

  <!-- Features -->
  <section class="features">
    <div class="container">
      <h2 class="section-title">Features</h2>
      <div class="features-grid">
        <div class="feature-card">
          <span class="feature-icon">âŒ¨ï¸</span>
          <h3>Vim Keybindings</h3>
          <p>Navigate with j/k, gg/G, h/l â€” feels like home for terminal users.</p>
        </div>
        <div class="feature-card">
          <span class="feature-icon">ğŸ“…</span>
          <h3>Visual Timeline</h3>
          <p>Day view with 15-minute precision and overlap handling. Multi-column support.</p>
        </div>
        <div class="feature-card">
          <span class="feature-icon">ğŸ”—</span>
          <h3>Google Calendar Sync</h3>
          <p>Multi-account OAuth with PKCE. Background sync every 30 seconds.</p>
        </div>
        <div class="feature-card">
          <span class="feature-icon">ğŸ‘¥</span>
          <h3>Meet With</h3>
          <p>Find free slots across multiple people's calendars instantly.</p>
        </div>
        <div class="feature-card">
          <span class="feature-icon">ğŸ“¹</span>
          <h3>Google Meet</h3>
          <p>Auto-generate Meet links when creating events.</p>
        </div>
        <div class="feature-card">
          <span class="feature-icon">ğŸ“</span>
          <h3>Multi-Calendar</h3>
          <p>Toggle calendars on/off, each with its own color.</p>
        </div>
        <div class="feature-card">
          <span class="feature-icon">ğŸŒ</span>
          <h3>Timezone Support</h3>
          <p>Events display in local time, toggle to see original timezone.</p>
        </div>
        <div class="feature-card">
          <span class="feature-icon">ğŸ—“ï¸</span>
          <h3>Natural Language</h3>
          <p>Type "tomorrow 3pm" or "next friday for 2 hours" â€” it just works.</p>
        </div>
        <div class="feature-card">
          <span class="feature-icon">ğŸ”</span>
          <h3>Recurring Events</h3>
          <p>Create and edit events with daily, weekly, monthly, or yearly recurrence.</p>
        </div>
        <div class="feature-card">
          <span class="feature-icon">ğŸ”</span>
          <h3>Event Search</h3>
          <p>Find events by title or description with /.</p>
        </div>
        <div class="feature-card">
          <span class="feature-icon">ğŸ“</span>
          <h3>Command Palette</h3>
          <p>Quick access to all actions with fuzzy search. Type : to open.</p>
        </div>
        <div class="feature-card">
          <span class="feature-icon">ğŸ¨</span>
          <h3>Themeable</h3>
          <p>Customize every color via TOML configuration.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Keybindings Preview -->
  <section class="keybindings">
    <div class="container">
      <h2 class="section-title">Keybindings</h2>
      <div class="kb-grid">
        <div class="kb-group">
          <h3>Navigation</h3>
          <div class="kb-list">
            <div class="kb-item"><kbd>j</kbd> / <kbd>k</kbd> <span>Move down / up</span></div>
            <div class="kb-item"><kbd>h</kbd> / <kbd>l</kbd> <span>Previous / next day</span></div>
            <div class="kb-item"><kbd>gg</kbd> / <kbd>G</kbd> <span>First / last item</span></div>
            <div class="kb-item"><kbd>n</kbd> <span>Jump to now</span></div>
            <div class="kb-item"><kbd>Ctrl+G</kbd> <span>Go to date</span></div>
          </div>
        </div>
        <div class="kb-group">
          <h3>Events</h3>
          <div class="kb-list">
            <div class="kb-item"><kbd>Ctrl+N</kbd> <span>Create event</span></div>
            <div class="kb-item"><kbd>e</kbd> <span>Edit event</span></div>
            <div class="kb-item"><kbd>D</kbd> <span>Delete event</span></div>
            <div class="kb-item"><kbd>Enter</kbd> <span>View details</span></div>
            <div class="kb-item"><kbd>o</kbd> <span>Open meeting link</span></div>
          </div>
        </div>
        <div class="kb-group">
          <h3>General</h3>
          <div class="kb-list">
            <div class="kb-item"><kbd>/</kbd> <span>Search events</span></div>
            <div class="kb-item"><kbd>:</kbd> <span>Command palette</span></div>
            <div class="kb-item"><kbd>?</kbd> <span>Context help</span></div>
            <div class="kb-item"><kbd>Shift+C</kbd> <span>Toggle calendars</span></div>
            <div class="kb-item"><kbd>q</kbd> <span>Quit</span></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Built With -->
  <section class="built-with">
    <div class="container">
      <p class="built-with-text">
        Built with <a href="/glyph">Glyph</a> â€” the React renderer for terminal UIs
      </p>
    </div>
  </section>

  <!-- Footer -->
  <footer class="footer">
    <div class="container">
      <div class="footer-inner">
        <div class="footer-brand">
          <img src="/logos/Sema.png" alt="Semos" class="footer-logo" />
          <span class="footer-name">Semos Labs</span>
        </div>
        <p class="footer-copy">
          Built with obsessive care for the terminal.
        </p>
      </div>
    </div>
  </footer>
</Layout>

<style>
  /* Nav (shared) */
  .nav {
    position: fixed; top: 0; left: 0; right: 0; z-index: 100;
    padding: 1rem 2rem;
    background: rgba(10, 10, 10, 0.85);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--gray-800);
  }
  .nav-inner {
    max-width: 1100px; margin: 0 auto;
    display: flex; align-items: center; justify-content: space-between;
  }
  .nav-logo { display: flex; align-items: center; gap: 0.75rem; }
  .nav-logo-img { width: 32px; height: 32px; border-radius: 6px; }
  .nav-logo-text {
    font-family: var(--font-hand); font-size: 1.5rem;
    font-weight: 400; letter-spacing: 0.01em;
  }
  .nav-links {
    display: flex; align-items: center; gap: 2rem;
    font-size: 0.85rem; color: var(--gray-300);
  }
  .nav-links a { color: var(--gray-300); transition: color 0.2s; }
  .nav-links a:hover { color: var(--white); }

  /* Hero */
  .hero {
    min-height: 100vh;
    display: flex; align-items: center; justify-content: center;
    padding: 8rem 2rem 4rem; gap: 4rem;
    max-width: 1100px; margin: 0 auto;
  }
  .hero-content { flex: 1; max-width: 520px; }
  .hero-badge {
    display: flex; align-items: center; gap: 1rem;
    margin-bottom: 2rem;
  }
  .hero-logo { width: 48px; height: 48px; border-radius: 12px; }
  .hero-product-name {
    font-family: var(--font-hand); font-size: 1.8rem; font-weight: 400;
  }
  .hero-title {
    font-family: var(--font-hand); font-size: 2.6rem;
    font-weight: 400; line-height: 1.3; margin-bottom: 1.5rem;
  }
  .hero-accent { color: var(--gray-200); font-style: italic; }
  .hero-description {
    font-size: 0.92rem; color: var(--gray-300);
    line-height: 1.8; margin-bottom: 2.5rem; max-width: 460px;
  }
  .hero-cta { display: flex; gap: 1rem; flex-wrap: wrap; }

  .btn-primary {
    display: inline-block; padding: 0.8rem 2rem;
    border: 1px solid var(--gray-500); border-radius: 6px;
    font-family: var(--font-mono); font-size: 0.85rem;
    color: var(--white); transition: all 0.25s; letter-spacing: 0.03em;
  }
  .btn-primary:hover {
    background: var(--white); color: var(--black); border-color: var(--white);
  }
  .btn-secondary {
    display: inline-block; padding: 0.8rem 2rem;
    border: 1px solid var(--gray-700); border-radius: 6px;
    font-family: var(--font-mono); font-size: 0.85rem;
    color: var(--gray-300); transition: all 0.25s; letter-spacing: 0.03em;
  }
  .btn-secondary:hover { color: var(--white); border-color: var(--gray-500); }

  .hero-decoration { flex: 1; max-width: 400px; }
  .terminal-block {
    background: var(--gray-900); border: 1px solid var(--gray-700);
    border-radius: 12px; overflow: hidden; font-size: 0.82rem;
  }
  .terminal-bar {
    display: flex; gap: 6px; padding: 12px 16px;
    background: var(--gray-800); border-bottom: 1px solid var(--gray-700);
  }
  .terminal-dot { width: 10px; height: 10px; border-radius: 50%; background: var(--gray-600); }
  .terminal-body { padding: 1.25rem 1.5rem; line-height: 1.9; }
  .t-prompt { color: var(--gray-400); }
  .t-cmd { color: var(--white); }
  .t-output { color: var(--gray-500); }
  .t-ui { color: var(--gray-500); font-size: 0.78rem; }
  .t-event { color: var(--gray-300); }
  .t-highlight { color: var(--white); font-weight: 600; }

  /* Shared */
  .container { max-width: 1100px; margin: 0 auto; }
  .section-title {
    font-family: var(--font-hand); font-size: 2.4rem;
    font-weight: 400; text-align: center; margin-bottom: 3.5rem;
  }

  /* Install */
  .quickstart {
    padding: 6rem 2rem;
    border-top: 1px solid var(--gray-800);
  }
  .install-grid {
    display: grid; grid-template-columns: 1fr 1fr; gap: 2rem;
  }
  .install-card {
    padding: 2rem; border: 1px solid var(--gray-800); border-radius: 12px;
  }
  .install-card h3 {
    font-family: var(--font-hand); font-size: 1.3rem;
    font-weight: 400; margin-bottom: 1.25rem;
  }
  .code-block {
    background: var(--gray-900); border-radius: 8px; padding: 1.25rem;
    display: flex; flex-direction: column; gap: 0.5rem;
  }
  .code-block code {
    font-family: var(--font-mono); font-size: 0.82rem; color: var(--gray-200);
  }
  .install-platforms {
    text-align: center; margin-top: 2rem;
    font-size: 0.8rem; color: var(--gray-500);
  }

  /* Features */
  .features {
    padding: 6rem 2rem;
    border-top: 1px solid var(--gray-800);
  }
  .features-grid {
    display: grid; grid-template-columns: repeat(4, 1fr); gap: 1.5rem;
  }
  .feature-card {
    padding: 1.75rem; border: 1px solid var(--gray-800);
    border-radius: 12px; transition: border-color 0.3s;
  }
  .feature-card:hover { border-color: var(--gray-600); }
  .feature-icon {
    display: block; font-size: 1.3rem;
    margin-bottom: 0.75rem;
  }
  .feature-card h3 {
    font-family: var(--font-hand); font-size: 1.2rem;
    font-weight: 400; margin-bottom: 0.5rem;
  }
  .feature-card p {
    font-size: 0.8rem; color: var(--gray-400); line-height: 1.7;
  }

  /* Keybindings */
  .keybindings {
    padding: 6rem 2rem;
    border-top: 1px solid var(--gray-800);
  }
  .kb-grid {
    display: grid; grid-template-columns: repeat(3, 1fr); gap: 2.5rem;
  }
  .kb-group h3 {
    font-family: var(--font-hand); font-size: 1.4rem;
    font-weight: 400; margin-bottom: 1.25rem;
    padding-bottom: 0.75rem; border-bottom: 1px solid var(--gray-800);
  }
  .kb-list { display: flex; flex-direction: column; gap: 0.6rem; }
  .kb-item {
    display: flex; align-items: center; gap: 0.75rem;
    font-size: 0.82rem;
  }
  .kb-item kbd {
    font-family: var(--font-mono); font-size: 0.75rem;
    background: var(--gray-800); border: 1px solid var(--gray-700);
    border-radius: 4px; padding: 0.15rem 0.5rem;
    color: var(--gray-200); min-width: fit-content;
  }
  .kb-item span { color: var(--gray-400); }

  /* Built With */
  .built-with {
    padding: 4rem 2rem;
    border-top: 1px solid var(--gray-800);
  }
  .built-with-text {
    text-align: center; font-size: 0.9rem; color: var(--gray-400);
  }
  .built-with-text a {
    color: var(--gray-200); border-bottom: 1px solid var(--gray-600);
    transition: color 0.2s, border-color 0.2s;
  }
  .built-with-text a:hover {
    color: var(--white); border-color: var(--white);
  }

  /* Footer */
  .footer {
    padding: 3rem 2rem;
    border-top: 1px solid var(--gray-800);
  }
  .footer-inner {
    display: flex; align-items: center; justify-content: space-between;
  }
  .footer-brand { display: flex; align-items: center; gap: 0.75rem; }
  .footer-logo { width: 24px; height: 24px; border-radius: 4px; }
  .footer-name {
    font-family: var(--font-hand); font-size: 1.3rem; font-weight: 400;
  }
  .footer-copy { font-size: 0.78rem; color: var(--gray-500); }

  /* Responsive */
  @media (max-width: 768px) {
    .hero {
      flex-direction: column; padding-top: 7rem;
      text-align: center; gap: 3rem;
    }
    .hero-content { max-width: 100%; }
    .hero-badge { justify-content: center; }
    .hero-description { max-width: 100%; }
    .hero-decoration { max-width: 100%; width: 100%; }
    .hero-title { font-size: 2rem; }
    .hero-cta { justify-content: center; }
    .install-grid { grid-template-columns: 1fr; }
    .features-grid { grid-template-columns: 1fr 1fr; }
    .kb-grid { grid-template-columns: 1fr; }
    .section-title { font-size: 2rem; }
    .footer-inner {
      flex-direction: column; gap: 1rem; text-align: center;
    }
  }

  @media (max-width: 480px) {
    .features-grid { grid-template-columns: 1fr; }
  }
</style>
