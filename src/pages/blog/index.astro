---
import Layout from "../../layouts/Layout.astro";
import ViewCount from "../../components/ViewCount.astro";
import { getCollection } from "astro:content";

const isDev = import.meta.env.DEV;
const posts = (await getCollection("blog", ({ data }) => isDev || !data.draft))
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

function formatDate(date: Date) {
  return date.toLocaleDateString("en-US", {
    year: "numeric",
    month: "short",
    day: "numeric",
  });
}
---

<Layout title="Blog â€” Semos Labs" description="Thoughts on terminal UIs, developer tools, and building open-source software." image="/og/blog.png">
  <section class="pt-28 md:pt-36 pb-16 md:pb-24 px-6 md:px-8">
    <div class="max-w-[840px] mx-auto">
      <p class="text-body-lg text-gray-500 mb-6">
        <span class="text-gray-400">$</span> cat /var/log/blog
      </p>
      <h1 class="heading-display mb-4">Blog</h1>
      <p class="font-prose text-[1.15rem] text-gray-400 leading-copy mb-16">
        Thoughts on terminal UIs, developer tools, and building open-source software.
      </p>

      {posts.length === 0 && (
        <p class="text-gray-500 italic">No posts yet. Check back soon.</p>
      )}

      <div class="space-y-6">
        {posts.map((post) => (
          <a
            href={`/blog/${post.id}`}
            class="group block bg-gray-900 border border-gray-700/60 rounded-xl overflow-hidden transition-colors hover:border-gray-600 shadow-[0_2px_20px_rgba(0,0,0,0.4)]"
          >
            <!-- Terminal header -->
            <div class="flex items-center gap-2 px-5 py-3 bg-gray-800/80 border-b border-gray-700/60">
              <div class="flex gap-1.5">
                <span class="w-2.5 h-2.5 rounded-full bg-gray-600"></span>
                <span class="w-2.5 h-2.5 rounded-full bg-gray-600"></span>
                <span class="w-2.5 h-2.5 rounded-full bg-gray-600"></span>
              </div>
              <span class="ml-2 text-fine text-gray-400 font-mono">$ cat blog/{post.id}</span>
              {post.data.draft && (
                <span class="ml-2 text-[11px] font-mono font-medium uppercase tracking-wider text-amber-400 bg-amber-400/10 border border-amber-400/30 px-2 py-0.5 rounded-full">
                  draft
                </span>
              )}
              <div class="ml-auto flex items-center gap-3">
                <time class="text-fine text-gray-500 font-mono">
                  {formatDate(post.data.date)}
                </time>
                <span class="text-fine text-gray-500 font-mono">
                  <ViewCount path={`/blog/${post.id}`} />
                </span>
              </div>
            </div>

            {/* Cover image */}
            {post.data.cover && (
              <div class="border-b border-gray-700/60">
                <img
                  src={post.data.cover}
                  alt=""
                  class="w-full block max-h-[260px] object-cover object-top"
                />
              </div>
            )}

            <!-- Content -->
            <div class="px-6 md:px-8 py-6 md:py-8">
              {post.data.tags && (
                <div class="flex gap-2 flex-wrap mb-4">
                  {post.data.tags.map((tag: string) => (
                    <span class="text-fine text-gray-500 bg-gray-800/80 px-2 py-0.5 rounded font-mono">
                      {tag}
                    </span>
                  ))}
                </div>
              )}
              <h2 class="font-hand text-title-lg mb-2 group-hover:text-gray-200 transition-colors">
                {post.data.title}
              </h2>
              <p class="font-prose text-body-sm text-gray-400 leading-copy">
                {post.data.description}
              </p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
</Layout>
