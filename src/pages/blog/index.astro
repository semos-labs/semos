---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog", ({ data }) => !data.draft))
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

function formatDate(date: Date) {
  return date.toLocaleDateString("en-US", {
    year: "numeric",
    month: "short",
    day: "numeric",
  });
}
---

<Layout title="Blog â€” Semos Labs" description="Thoughts on terminal UIs, developer tools, and building open-source software." image="/og/blog.png">
  <section class="pt-28 md:pt-36 pb-16 md:pb-24 px-6 md:px-8">
    <div class="max-w-[720px] mx-auto">
      <p class="text-body-lg text-gray-500 mb-6">
        <span class="text-gray-400">$</span> cat /var/log/blog
      </p>
      <h1 class="heading-display mb-4">Blog</h1>
      <p class="font-prose text-[1.15rem] text-gray-400 leading-copy mb-16">
        Thoughts on terminal UIs, developer tools, and building open-source software.
      </p>

      {posts.length === 0 && (
        <p class="text-gray-500 italic">No posts yet. Check back soon.</p>
      )}

      <div class="space-y-10">
        {posts.map((post) => (
          <a
            href={`/blog/${post.id}`}
            class="group block py-6 -mx-4 px-4 rounded-xl transition-colors hover:bg-gray-900/60"
          >
            {post.data.cover && (
              <div class="relative mb-6">
                <div class="absolute -inset-6 bg-gradient-to-b from-white/[0.03] via-white/[0.06] to-transparent rounded-2xl blur-2xl pointer-events-none"></div>
                <div class="relative bg-gray-900 rounded-xl overflow-hidden shadow-[0_20px_60px_-15px_rgba(0,0,0,0.7)] ring-1 ring-white/[0.08] ring-inset">
                  <div class="absolute inset-0 rounded-xl border border-white/[0.06] pointer-events-none z-10"></div>
                  <img
                    src={post.data.cover}
                    alt=""
                    class="w-full block max-h-[280px] object-cover"
                  />
                </div>
              </div>
            )}
            <div class="flex items-center gap-4 mb-3">
              <time class="text-small text-gray-500 font-mono shrink-0">
                {formatDate(post.data.date)}
              </time>
              {post.data.tags && (
                <div class="flex gap-2 flex-wrap">
                  {post.data.tags.map((tag: string) => (
                    <span class="text-fine text-gray-500 bg-gray-800 px-2 py-0.5 rounded">
                      {tag}
                    </span>
                  ))}
                </div>
              )}
            </div>
            <h2 class="font-hand text-title-lg mb-2 group-hover:text-gray-200 transition-colors">
              {post.data.title}
            </h2>
            <p class="font-prose text-body-sm text-gray-400 leading-copy">
              {post.data.description}
            </p>
          </a>
        ))}
      </div>
    </div>
  </section>
</Layout>
